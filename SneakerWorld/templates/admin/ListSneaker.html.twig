{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <header class="blog-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    <a href="/admin" style="color: black;"class="display-5">Espace Administrateur</a>
                </div>
                <div class="col-4 text-center">
                    <h2>SneakerWorld</h2>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-secondary" >Deconnexion</a>
                </div>
            </div>
        </header>

        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex justify-content-between">
                <a class="p-2 text-muted" href="#">Nike</a>
                <a class="p-2 text-muted" href="#">Jordan</a>
                <a class="p-2 text-muted" href="#">balenciaga</a>
                <a class="p-2 text-muted" href="#">Tendances</a>
                <a class="p-2 text-muted" href="#">Asics</a>
                <a class="p-2 text-muted" href="#">Converse</a>
                <a class="p-2 text-muted" href="#">Comme Des Gar√ßons</a>
                <a class="p-2 text-muted" href="#">Off White</a>
                <a class="p-2 text-muted" href="#">Featuring</a>
                <a class="p-2 text-muted" href="#">Occasion</a>
            </nav>
        </div>
    </div>

    <main role="main" class="container">
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Marque</th>
                    <th scope="col">Couleur</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Image</th>
                </tr>
                </thead>
                <tbody>
                {% for sneaker in sneakers %}
                <tr>
                    <th>{{ sneaker.marque }}</th>
                    <td>{{ sneaker.couleur }}</td>
                    <td>{{ sneaker.price }}</td>
                    <td><img src="{{ asset('uploads/image/' ~ sneaker.image) }}" alt="sneakers" width="200" height="200"></td>

                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>


{% endblock %}
