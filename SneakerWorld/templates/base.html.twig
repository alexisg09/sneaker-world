<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block title %}Sneaker World{% endblock %}</title>

    {% block stylesheets %}
        <link href="{{ asset('resources/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet"/>
        <link href="{{ asset('resources/css/customstyle.css') }}" type="text/css" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">
        <link
                rel="stylesheet"
                href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.0/css/bootstrap.min.css"
                integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
                crossorigin="anonymous"

        />
        <link id="dark-theme-style" rel="stylesheet" />
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('resources/js/jquery.slim.min.js') }}"></script>
        <script src="{{ asset('resources/js/poppers.min.js') }}"></script>
        <script src="{{ asset('resources/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('resources/js/holder.min.js') }}"></script>
    {% endblock %}
</head>
<body >
{% block body %}{% endblock %}
<div class="dropdown" style="margin: 50px 50px ">
    <button class="btn btn-outline-secondary logoutCustom dropdown-toggle text-uppercase" type="button"
            id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{ app.request.locale }}
    </button>
    <div class="dropdown-menu logoutCustom" aria-labelledby="dropdownMenuButton">
        {% for key,locale in locales %}
            <a class="dropdown-item " href="{{ path(app.request.get('_route'),
                app.request.attributes.get('_route_params')|merge({'_locale': key})) }}">{{ locale }}</a>
        {% endfor %}
    </div>
</div>
</body>
</html>
