{% extends 'base.html.twig' %}

{% block body %}

<div style="margin: 0 65px 0 65px;">

  {% include './/common/header.html.twig' %}

    <br><br>
    <div class="container">
        <div class="row">
            <div class="d-flex justify-content-center">
                <div class="card" style="margin: 0 0 65px 0;">
                    <img class="card-img-top" src="{{ asset('uploads/image/' ~ sneaker.image) }}" alt="{{ sneaker.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ sneaker.nom }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ sneaker.likeSneakers | length }} {{ 'common.ontlike'|trans }}</h6>
                        <h5 class="card-text">{{ sneaker.price }}â‚¬</h5>
                        <p class="card-text"> {{ 'common.listecomm'|trans }} :</p>
                        {% for comment in comments %}
                            <p><b>{{ comment.prenom }} dit : </b><br> {{ comment.commentaire }}</p>

                        {% endfor %}
                        {{ form_start(form) }}
                        {{ form_row(form) }}
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" href="{{ path('comment.sneaker', {id:sneaker.id}) }}" >{{ 'common.enregistrer'|trans }}</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
{% endblock %}