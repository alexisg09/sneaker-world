{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 pt-1">
                <a class="btn btn-sm btn-outline-secondary" href="/new-user">Rejoignez-nous !</a>
            </div>
            <div class="col-4 text-center">
                <a href="/panel" style="color: black;"class="display-4">SneakerWorld</a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                <a href="login" class="btn btn-sm btn-outline-secondary" >Connexion</a>
            </div>
        </div>
    </header>
    <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-between">
            <a class="p-2 text-muted" href="#">Nike</a>
            <a class="p-2 text-muted" href="#">Jordan</a>
            <a class="p-2 text-muted" href="#">balenciaga</a>
            <a class="p-2 text-muted" href="#">Tendances</a>
            <a class="p-2 text-muted" href="#">Asics</a>
            <a class="p-2 text-muted" href="#">Converse</a>
            <a class="p-2 text-muted" href="#">Comme Des Gar√ßons</a>
            <a class="p-2 text-muted" href="#">Off White</a>
            <a class="p-2 text-muted" href="#">Featuring</a>
            <a class="p-2 text-muted" href="#">Occasion</a>
        </nav>
    </div>
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.nom }}, <a href="{{ path('app_logout') }}">Logout</a>
                <a href="sneaker">consulter votre compte</a>
            </div>
        {% endif %}

        <div class="d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Connectez-vous</h5>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                </div>
            </div>
        </div>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}


        </form>
</div>
{% endblock %}
