{% extends 'base.html.twig' %}

{% block body %}

    <div style="margin: 0 65px 0 65px;">
        <header class="blog-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    <button class="btn btn-sm btn-outline-secondary">Bonjour {{ app.user.prenom }} !</button>
                </div>
                <div class="col-4 text-center">
                    <h2>SneakerWorld</h2>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a style="margin: 0 65px 0 65px;" href="{{ path('sneaker') }}" class="btn btn-sm btn-outline-secondary" >retour</a>
                    <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-secondary" > Deconnexion </a>
                </div>



            </div>
        </header>

        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex justify-content-between">
                <a class="p-2 text-muted" href="#">Nike</a>
                <a class="p-2 text-muted" href="#">Jordan</a>
                <a class="p-2 text-muted" href="#">balenciaga</a>
                <a class="p-2 text-muted" href="#">Tendances</a>
                <a class="p-2 text-muted" href="#">Asics</a>
                <a class="p-2 text-muted" href="#">Converse</a>
                <a class="p-2 text-muted" href="#">Comme Des Garçons</a>
                <a class="p-2 text-muted" href="#">Off White</a>
                <a class="p-2 text-muted" href="#">Featuring</a>
                <a class="p-2 text-muted" href="#">Occasion</a>
            </nav>
        </div>
    </div>
    <br><br>
    <div class="container">
        <div class="row">
            {% for sneaker in sneakerLike %}
            <div class="col-12 col-md-4">
                <div class="card" style="margin: 0 0 65px 0;">
                    <img class="card-img-top" src="{{ asset('uploads/image/' ~ sneaker.image) }}" alt="{{ sneaker.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ sneaker.nom }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ sneaker.likeSneakers | length }} aiment ça</h6>
                        <h5 class="card-text">{{ sneaker.price }}€</h5>
                        <a class="btn btn-primary" href="{{ path('delete', {id:sneaker.id}) }}">retirer</a>
                    </div>
                </div>
            </div>
            <br>
            {% endfor %}
        </div>
    </div>

{% endblock %}




